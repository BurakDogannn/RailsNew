	<div class="container">

		<div class="row">
			<%=render'shared/navbar' %>
			<div class="col-md-12">
				<div class="row">
					<div class="panel panel-default">
						<table class="table ">
							
							<% @articles.each do |article| %>
							<tr><td><strong><%= article.title %></strong></td></tr>
							<tr><td>
								<div class="row">
									<div class="col-md-4">
										
										<%= link_to category_article_path(article) do %>
										<%= image_tag article.image.url(:medium) %>
										<% end %>


									</div>

									<div class="col-md-8"><%= article.text %></div>
								</div>
							</td>
						</tr>
						
						<% end %>
					</table>
				</div>
			</div>

		</div>

	</div>
</div>
<%=render'shared/footer' %>