							<tr><td>
							  <div class="row">
								<div class="col-md-4">
									 
					<%= link_to category_article_path(article.category_id,article) do %>
						<%= image_tag article.image.url(:medium) %>
					<% end %>
					
					
								 </div>
									<div class="col-md-8"><%= article.text %></div>
								</div>
							    </td>
						   </tr>
						<% end %>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
