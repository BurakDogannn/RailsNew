<div class="container">
	<div class="row">

                  <!-- alanların şartlarının sorgulanması-->
					

	 <%= form_for @article, html: { multipart: true } do |f| %>

	          <% if @article.errors.any? %>
					<div id="errors">
						<h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving:</h2>
						<ul>
							<% @article.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
					<% end %>

        <%= f.hidden_field :category_id, value: params[:category_id] %>
		<p>
			<%= f.label "Haber başlığı " %><br>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label "İçerik " %><br>
			<%= f.text_area :text %>
		</p>
		<p>
			<%= f.label "Fotoraf " %><br>
			<%= f.file_field :image %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
		
	 <% if author_signed_in? %>
		<p><%= link_to "Çıkış",destroy_author_session_path, :method => 'delete'%></p>
		<br>
	 <%end%>

	</div>
</div>