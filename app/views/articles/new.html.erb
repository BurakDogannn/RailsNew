<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% if author_signed_in? %>
    <p><%= link_to "Sign_out",destroy_author_session_path, :method => 'delete'%></p>
    <br>
    <%end%>