<%= form_for @article, html: { multipart: true } do |f| %>
  
  
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
   
   <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% if author_signed_in? %>
    <p><%= link_to "Sign_out",destroy_author_session_path, :method => 'delete'%></p>
    <br>
    <%end%>